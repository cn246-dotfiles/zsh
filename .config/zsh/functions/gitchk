git_recurse() {
  local dir
  for dir in ./*(/); do
    if [[ -d "${dir}/.git" ]]; then
      printf '%s\n' ">>> ${dir}"
      (
        cd "${dir}" || return
        git fetch --all --quiet
        git status -uno
        echo
      )
    fi
  done
}

git_recurse

