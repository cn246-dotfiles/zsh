filename="$1"
if ! [ -z "$filename" ]; then
  if ! [ -r "$filename" ]; then
    cat << EOF > "$filename"
#!/usr/bin/env bash

# Description:
# Author: Chuck Nemeth



# vim: ft=sh ts=2 sts=2 sw=2 sr et
EOF
    vim +6 -c 'startinsert' "$filename"
  else
    mkuhoh "$filename"
  fi
  else
    printf '%s\n' "Please provide an argument as filename"
fi

# vim: ft=zsh ts=2 sts=2 sw=2 sr et
